<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>RF5AutoPickup</AssemblyName>
    <Description>RF5AutoPickup</Description>
    <Product>RF5AutoPickup</Product>
    <Version>0.1.0</Version>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>RF5AutoPickup</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="0Harmony">
      <HintPath>libs\0Harmony.dll</HintPath>
    </Reference>
    <Reference Include="Assembly-CSharp">
      <HintPath>libs\unhollowed\Assembly-CSharp.dll</HintPath>
    </Reference>    
    <Reference Include="BepInEx.Core">
      <HintPath>libs\BepInEx.Core.dll</HintPath>
    </Reference>
    <Reference Include="BepInEx.IL2CPP">
      <HintPath>libs\BepInEx.IL2CPP.dll</HintPath>
    </Reference>

    <Reference Include="Il2Cppmscorlib">
      <HintPath>libs\unhollowed\Il2Cppmscorlib.dll</HintPath>
    </Reference>

    <Reference Include="UnhollowerBaseLib">
      <HintPath>libs\UnhollowerBaseLib.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
		<None Update="RF5AutoPickup.cfg">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>
</Project>